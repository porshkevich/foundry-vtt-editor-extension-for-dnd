<form>
    <div class="form-group {{#if (not selected)}}hidden{{/if}}">
        <label>{{localize "EEFDND.SelectedValue"}}</label>
        <div class="form-fields">
            <input type="text" name="old" value="{{selected}}" {{disabled}}>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "DND5E.Formula"}}</label>
        <div class="form-fields">
            <input type="text" name="formula">
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "DND5E.DamageType"}}</label>
        <div class="form-fields">
            <select name="damageType">
                {{selectOptions damageTypeChoices sort=true}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="form-enricher-input-average">{{localize "EEFDND.Average"}}</label>
        <div class="form-fields">
            <input id="form-enricher-input-average" name="average" type="checkbox" value="true">
            <input type="text" name="averageValue">
        </div>
    </div>
    <button type="button" name="save">{{localize "EEFDND.EnricherInsert"}}</button>
</form>
