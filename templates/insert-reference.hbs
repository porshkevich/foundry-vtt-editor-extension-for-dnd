<form>
    <div class="form-group {{#if (not selected)}}hidden{{/if}}">
        <label>{{localize "EEFDND.SelectedValue"}}</label>
        <div class="form-fields">
            <input type="text" name="old" value="{{selected}}" {{disabled}}>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize label}}</label>
        <div class="form-fields">
            <select name="value">
                {{selectOptions choices sort=true}}
            </select>
            <label for="form-enricher-input-wrap" style="white-space: nowrap">
                {{localize "EEFDND.WrapSelected"}}
            </label>
            <input id="form-enricher-input-wrap" name="wrap" type="checkbox" value="true">
        </div>
    </div>
    <button type="button" name="save">{{localize "EEFDND.EnricherInsert"}}</button>
</form>
